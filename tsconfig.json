{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "esModuleInterop": false
  },
  "include": [
    "**/*.ts",
    "../daemonitor-frontend/.nuxt/types/imports.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
}
